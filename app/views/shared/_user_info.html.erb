<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <span class="user_name">
      <%= current_user.name %>
    </span>
    <span class="weights">
      <%= pluralize(current_user.weights.count, "weight") %>
      Highest: <%= current_user.weights.maximum( "weight" ) %>
      Lowest <%= current_user.weights.minimum( "weight" ) %>
      
    </span>
  </a>
</div>

